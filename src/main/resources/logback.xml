<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

	<property resource="application.properties" />

	<contextName>Scatter</contextName>

	<!-- This is console appender definition -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- log by method is not fast. remove it later -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}/%method
				%msg%n</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="org.springframework.test.context.junit4.SpringJUnit4ClassRunner">
	<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}/%method
				%msg%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.epsilon.metadata.image.location" level="INFO" />

	<logger name="org.springframework" level="WARN" />
	<logger name="org.springframework.security" level="DEBUG" />
	<logger name="org.springframework.boot.autoconfigure.security" level="DEBUG" />
	<logger name="org.springframework.test.context" level="DEBUG" />



</configuration>
